@article{sveberg_se_2012,
	title = {Se faire {INF} – une construction causative},
	volume = {106},
	copyright = {Copyright (c) 2012 Tore Frøland Sveberg},
	issn = {2000-3560},
	url = {https://publicera.kb.se/mosp/article/view/8191},
	doi = {10.58221/mosp.v106i2.8191},
